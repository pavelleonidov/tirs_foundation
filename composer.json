{
  "name": "tirs/tirs-foundation",
  "type": "typo3-cms-extension",
  "description": "Base distribution extension based on Foundation 6.2.",
  "homepage": "http://www.pavel-leonidov.de",
  "license": ["GPL-2.0+"],
  "version": "8.3.0",
  "require": {
	"typo3/cms-core": ">=7.6",
	"typo3/cms-fluid-styled-content": "*",
	"tirs/tirs-configuration": "dev-master"
  },
  "authors": [
	{
	  "name": "Pavel Leonidov",
	  "role": "Developer",
	  "homepage": "http://www.pavel-leonidov.de"
	}
  ],
  "replace": {
	"tirs_foundation": "self.version"
  },
  "config": {
	"vendor-dir": ".Build/vendor",
	"bin-dir": ".Build/bin"
  },
  "scripts": {
	"post-autoload-dump": [
	  "mkdir -p .Build/Web/typo3conf/ext/",
	  "[ -L .Build/Web/typo3conf/ext/tirs_foundation ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/tirs_foundation"
	]
  },
  "extra": {
	"branch-alias": {
	  "dev-master": "master"
	},
	"typo3/cms": {
	  "cms-package-dir": "{$vendor-dir}/typo3/cms",
	  "web-dir": ".Build/Web"
	}
  }
}

